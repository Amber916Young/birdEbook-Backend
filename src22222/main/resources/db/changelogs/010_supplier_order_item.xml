<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="10">
        <createTable tableName="supplier_order_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="supplier_order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_product_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="nickname" type="VARCHAR(100)"/>
            <column name="quantity" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="vat" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="VARCHAR(100)"/>

            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="supplier_order_id"
                                 baseTableName="supplier_order_item"
                                 constraintName="fk_supplier_order_item_to_supplier_order"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier_order"/>
    </changeSet>
</databaseChangeLog>