<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="4">
        <createTable tableName="supplier">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="supplier_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="cut_off" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_logo_url" type="VARCHAR(100)"/>
            <column name="supplier_email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address_line1" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address_line2" type="VARCHAR(50)"/>
            <column name="address_line3" type="VARCHAR(50)"/>
            <column name="delivery_day" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="min_order" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="category" type="VARCHAR(100)"/>
            <column name="is_external_supplier" type="bit"/>
            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>