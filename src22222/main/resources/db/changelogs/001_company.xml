<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet  author="meng"  id="1">
        <createTable tableName="company">
            <column  name="id"  type="BIGINT" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="company_name"  type="VARCHAR(50)">
                <constraints  nullable="false"/>
            </column>
            <column name="Status" type="VARCHAR(50)"/>
            <column  name="company_logo_url"  type="VARCHAR(200)" />
            <column  name="company_email"  type="VARCHAR(50)">
                <constraints  nullable="false" />
            </column>
            <column  name="contact_number"  type="VARCHAR(50)">
                <constraints  nullable="false" />
            </column>
            <column  name="address_line1"  type="VARCHAR(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="address_line2"  type="VARCHAR(50)"/>
            <column  name="address_line3"  type="VARCHAR(50)"/>
            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>