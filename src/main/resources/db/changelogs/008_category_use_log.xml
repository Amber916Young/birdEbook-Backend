<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="bird" id="8">
        <createTable tableName="category_use_log">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="cate_id" type="BIGINT"/>
            <column name="article_id" type="BIGINT"/>
            <column name="article_type" type="VARCHAR(100)" />

            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="category_use_log"
                                 constraintName="fk_category_use_log_article_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article"/>
    </changeSet>
</databaseChangeLog>