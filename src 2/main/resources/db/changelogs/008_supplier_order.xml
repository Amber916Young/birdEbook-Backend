<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="8">
        <createTable tableName="supplier_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="company_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_logo_url" type="VARCHAR(100)" />
            <column name="total_vat" type="decimal(10,2)"/>
            <column name="total_price" type="decimal(10,2)"/>
            <column name="delivery_date" type="date"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="supplier_order"
                                 constraintName="fk_supplier_order_to_company"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>
    </changeSet>
</databaseChangeLog>