<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="20">
        <createTable tableName="service_partner_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="service_partner_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="service_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="service_price" type="decimal(10,2)"/>
            <column name="vat" type="decimal(10,2)"/>

            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

        </createTable>
        <addForeignKeyConstraint baseColumnNames="service_partner_id"
                                 baseTableName="service_partner_service"
                                 constraintName="fk_service_partner_service_to_ervice_partner"
                                 referencedColumnNames="id"
                                 referencedTableName="service_partner"/>
    </changeSet>
</databaseChangeLog>