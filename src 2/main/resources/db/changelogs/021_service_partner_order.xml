<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="21">
        <createTable tableName="service_partner_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="company_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="service_partner_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

        </createTable>
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="service_partner_order"
                                 constraintName="fk_service_partner_order_to_company"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>
    </changeSet>
</databaseChangeLog>