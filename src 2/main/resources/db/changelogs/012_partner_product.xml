<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="meng" id="12">
        <createTable tableName="partner_product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="partner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="product_image_url" type="VARCHAR(100)"/>
            <column name="vat" type="decimal(10,2)"/>
            <column name="price" type="decimal(10,2)"/>
            <column name="create_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="partner_id"
                                 baseTableName="partner_product"
                                 constraintName="fk_partner_product_to_partner"
                                 referencedColumnNames="id"
                                 referencedTableName="partner"/>
    </changeSet>
</databaseChangeLog>